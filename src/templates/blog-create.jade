div.panel-panel-default
  button.btn-default(ng-click="signUp()") Admin Me!
  button.btn-default(ng-click="postPost()") Post!
  button.btn-default(ng-click="updatePost()") Update Post!
  button.btn-default(ng-click="postFav()") Post Fave!

div.col-xs-12.col-md-8.container
  div.post.container-fluid(ng-style="{'border': '2px black solid'}")
    image.img-responsive(src="{{post.main_img}}")
    div.post_title
      h1.text-center {{post.title}}
    div.post_body
      blockquote
        p {{post.quote}}
      p.text-center {{post.body}}
