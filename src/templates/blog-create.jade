div.container
  div#input
    div.form-group
      label(for="title") Title
      input.form-control(type="text" id="title" ng-model="newPost.title" placeholder="Enter post title...")
    div.form-group
      label(for="quote") Quote
      input.form-control(type="text" id="quote" ng-model="newPost.quote" placeholder="Enter post quote...")  
    div.form-group
      label(for="body") Body
      textarea.form-control(type="text" id="body" rows="6" ng-model="newPost.body" placeholder="Enter post...")
    div.form-group
      label(for="main_img") Main Image
      input.form-control(type="text" id="main_img" ng-model="newPost.main_img" placeholder="Enter image url...") 
    div.form-group
      label(for="npassword") Password
      input.form-control(type="password" id="npassword" ng-model="newPost.password" placeholder="Enter password...") 
  div.panel.panel-default  
    div.form-group
      label(for="url") URL
      input.form-control(type="text" id="url" ng-model="newFav.url" placeholder="Enter post title...")
    div.form-group
      label(for="citation") Citation Link
      input.form-control(type="text" id="citation" ng-model="newFav.citation" placeholder="Enter post quote...")  
    div.form-group
      label(for="fpassword") Password
      input.form-control(type="password" id="fpassword" ng-model="newFav.password" placeholder="Enter password...") 
    
